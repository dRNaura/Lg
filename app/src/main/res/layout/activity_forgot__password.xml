<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurred_bg"
    android:padding="20sp"
    tools:context=".activity.Forgot_Password">

    <ImageView
        android:layout_marginTop="30sp"
        android:layout_width="30sp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_height="30sp"
        android:id="@+id/back"
        android:padding="5dp"
        android:src="@drawable/arrow_left"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:id="@+id/logo"
        android:src="@drawable/lg_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_pass"
        android:fontFamily="@font/josefinsans_semibold"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:id="@+id/forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:layout_below="@+id/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/reset"
        android:fontFamily="@font/josefinsans_regular"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:id="@+id/for2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/forgot"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/for2"
        android:layout_marginTop="40sp"
        android:paddingTop="8sp"
        android:paddingBottom="15sp"
        android:paddingEnd="8sp"
        android:paddingStart="8sp"
        android:id="@+id/l1"
        android:background="@drawable/light_grey_shape"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_email"
                android:padding="10sp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:hintTextAppearance="@style/HintText">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:drawablePadding="10sp"
                    android:drawableLeft="@drawable/mail"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textSize="16sp"
                    android:id="@+id/forgotpassmail"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/light_grey"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    tools:targetApi="lollipop" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <View
            android:padding="8sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="8sp"
            android:background="@color/textcolor"/>

        <Button
            android:layout_width="304sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40sp"
            android:layout_height="50sp"
            android:text="@string/Submit"
            android:textSize="16sp"
            android:id="@+id/submit_pass"
            android:textAllCaps="true"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/josefinsans_semibold"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>