<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    android:id="@+id/relativee"
    android:layout_margin="5sp"
    android:padding="20sp"
    android:background="@drawable/light_grey_shape">

    <TextView
        android:id="@+id/date_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:fontFamily="@font/josefinsans_semibold"
        android:padding="5sp"
        android:text=""
        android:textColor="@color/textcolor"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:padding="5sp"
        android:layout_below="@+id/date_cr">

    <TextView
        android:id="@+id/name_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lay_right"
        android:fontFamily="@font/josefinsans_semibold"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/lay_right"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/price_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefinsans_semibold"
        android:textSize="24sp"
        android:text="500"
        android:textColor="@color/drawertextcolor" />

    <ImageView
        android:layout_marginLeft="5sp"
        android:id="@+id/fav"
        android:layout_marginTop="8sp"
        android:layout_toRightOf="@+id/price_cr"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/credit__coin"/>
    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>