<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ls="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurred_bg"
    tools:context=".activity.SignUp">

    <RelativeLayout
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lg_logo"
            android:id="@+id/logo"
            android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_heading"
            android:fontFamily="@font/josefinsans_semibold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/signuptext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25sp"
            android:layout_below="@+id/logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signuptext"
            android:layout_marginTop="20sp"
            android:padding="15sp"
            android:id="@+id/l1"
            android:orientation="vertical"
            android:background="@drawable/light_grey_shape">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mail"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_email"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextAppearance="@style/HintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:id="@+id/text_email"
                        android:textColorHint="@color/textcolor"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/white"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="8sp"
                android:id="@+id/view1"
                android:background="@color/textcolor"/>

            <LinearLayout
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="1sp"
                    android:layout_marginLeft="2sp"
                    android:padding="3sp"
                    android:layout_weight="1"
                    android:layout_marginTop="10sp"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="27sp"
                            android:layout_height="27sp"
                            android:src="@drawable/user"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_first_name"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            app:boxBackgroundColor="@color/white"
                            app:hintTextAppearance="@style/HintText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/first_name"
                                android:textColorHint="@color/textcolor"
                                android:fontFamily="@font/josefinsans_regular"
                                android:textSize="@dimen/text_size"
                                android:id="@+id/text_firstname"
                                android:textColor="@color/white"
                                android:background="@null"
                                android:inputType="textEmailAddress"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="8sp"
                        android:id="@+id/view3"
                        android:background="@color/textcolor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="2sp"
                    android:layout_marginLeft="1sp"
                    android:padding="3sp"
                    android:layout_weight="1"
                    android:layout_marginTop="10sp"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/text_input_last_name"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            app:boxBackgroundColor="@color/white"
                            app:hintTextAppearance="@style/HintText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/last_name"
                                android:textColorHint="@color/textcolor"
                                android:fontFamily="@font/josefinsans_regular"
                                android:textSize="@dimen/text_size"
                                android:id="@+id/text_lastname"
                                android:textColor="@color/white"
                                android:background="@null"
                                android:inputType="textEmailAddress"
                                tools:targetApi="lollipop" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="8sp"
                        android:id="@+id/view2"
                        android:background="@color/textcolor"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/map"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textColor="@color/white"/>

                    <Spinner
                        android:layout_marginTop="3sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:backgroundTint="@color/white"
                        android:padding="3sp" />





                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="8sp"
                android:id="@+id/view4"
                android:background="@color/textcolor"/>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="3sp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="27sp"
                    android:layout_height="27sp"
                    android:src="@drawable/user"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_age"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextAppearance="@style/HintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/age_optional"
                        android:textColorHint="@color/textcolor"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/text_size"
                        android:id="@+id/text_age"
                        android:textColor="@color/white"
                        android:background="@null"
                        android:inputType="number"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="8sp"
                android:id="@+id/view5"
                android:background="@color/textcolor"/>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:padding="3sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lock"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_password"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextAppearance="@style/HintText"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/white"
                    app:passwordToggleDrawable="@drawable/password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/text_size"
                        android:background="@null"
                        android:id="@+id/text_password"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/light_grey"
                        android:inputType="textPassword"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:id="@+id/view6"
                android:background="@color/textcolor"/>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="3sp"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_phone"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextAppearance="@style/HintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_optional"
                        android:textColorHint="@color/textcolor"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/text_size"
                        android:id="@+id/text_phone"
                        android:textColor="@color/white"
                        android:background="@null"
                        android:inputType="number"
                        android:digits="1234567890"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="8sp"
                android:id="@+id/view7"
                android:background="@color/textcolor"/>

            <CheckBox
                android:layout_marginTop="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_condition"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/condition"
                android:backgroundTint="@color/white"
                android:buttonTint="@color/white"
                android:fontFamily="@font/josefinsans_regular"/>

            <Button
                android:layout_width="304sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20sp"
                android:layout_height="50sp"
                android:text="@string/signup"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:id="@+id/signup"
                android:background="@drawable/btn_shape"
                android:fontFamily="@font/josefinsans_semibold"
                android:textColor="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/josefinsans_semibold"
                android:textSize="16sp"
                android:text="@string/didnt_receive_pin"
                android:layout_marginTop="30sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/josefinsans_semibold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_below="@+id/l1"
                android:id="@+id/login_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25sp"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>